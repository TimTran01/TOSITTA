<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/inputLanguageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Language To Detect"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/selectInputLanguageSpinner"
        android:layout_width="365dp"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/spinner_bg"
        android:dropDownVerticalOffset="45dp" />

    <TextView
        android:id="@+id/suggestionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="#C5681A"
        android:textAlignment="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/outputLanguageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translate to:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/selectOutputLanguageSpinner"
        android:layout_width="365dp"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/spinner_bg"
        android:dropDownVerticalOffset="45dp" />

    <Button
        android:id="@+id/btnPickImage"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="Pick Image" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/ocrResultContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="OCR Result"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/ocrResultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/langIDContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Identified Language"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/langIDTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/translatedTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Translated Text"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/translatedTextTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>